<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.FlowerOrderMapper">

    <resultMap type="FlowerOrder" id="FlowerOrderResult">
        <result property="orderId"    column="order_id"    />
        <result property="userId"    column="user_id"    />
        <result property="userName"    column="user_name"    />
        <result property="flowerId"    column="flower_id"    />
        <result property="flowerName"    column="flower_name"    />
        <result property="quantity"    column="quantity"    />
        <result property="totalPrice"    column="total_price"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectFlowerOrderVo">
        select order_id, user_id, user_name, flower_id, flower_name, quantity, total_price, status, create_by, create_time, update_by, update_time, remark from flower_order
    </sql>

    <select id="selectFlowerOrderList" parameterType="FlowerOrder" resultMap="FlowerOrderResult">
        <include refid="selectFlowerOrderVo"/>
        <where>
            <if test="orderId != null and orderId != ''"> and order_id = #{orderId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="flowerId != null "> and flower_id = #{flowerId}</if>
            <if test="flowerName != null  and flowerName != ''"> and flower_name like concat('%', #{flowerName}, '%')</if>
            <if test="quantity != null "> and quantity = #{quantity}</if>
            <if test="totalPrice != null "> and total_price = #{totalPrice}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectFlowerOrderByOrderId" parameterType="String" resultMap="FlowerOrderResult">
        <include refid="selectFlowerOrderVo"/>
        where order_id = #{orderId}
    </select>

    <insert id="insertFlowerOrder" parameterType="FlowerOrder">
        insert into flower_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="userName != null">user_name,</if>
            <if test="flowerId != null">flower_id,</if>
            <if test="flowerName != null">flower_name,</if>
            <if test="quantity != null">quantity,</if>
            <if test="totalPrice != null">total_price,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="userName != null">#{userName},</if>
            <if test="flowerId != null">#{flowerId},</if>
            <if test="flowerName != null">#{flowerName},</if>
            <if test="quantity != null">#{quantity},</if>
            <if test="totalPrice != null">#{totalPrice},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>


    <insert id="batchInsertFlowerOrder" parameterType="java.util.List">
        insert into flower_order (
        order_id,
        user_id,
        user_name,
        flower_id,
        flower_name,
        quantity,
        total_price,
        status,
        create_by,
        create_time
        ) values
        <foreach collection="list" item="item" separator=",">
            (
            #{item.orderId},
            #{item.userId},
            #{item.userName},
            #{item.flowerId},
            #{item.flowerName},
            #{item.quantity},
            #{item.totalPrice},
            #{item.status},
            #{item.createBy},
            #{item.createTime}
            )
        </foreach>
    </insert>

    <update id="batchUpdateFlowerStock" parameterType="java.util.List">
        update flower
        <set>
            num = case flower_id
            <foreach collection="list" item="item">
                when #{item.flowerId} then num - #{item.quantity}
            </foreach>
            end
        </set>
        where flower_id in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item.flowerId}
        </foreach>
    </update>

    <select id="selectFlowerOrderOne" resultMap="FlowerOrderResult">
        <include refid="selectFlowerOrderVo"/>
        <where>
            and order_id = #{orderId}
            and user_id = #{userId}
            and flower_id = #{flowerId}
        </where>
    </select>


    <delete id="deleteFlowerOrderOne">
        delete from flower_order
        where order_id = #{orderId}
          and user_id = #{userId}
          and flower_id = #{flowerId}
    </delete>

    <update id="updateFlowerOrder" parameterType="FlowerOrder">
        update flower_order
        set quantity = #{quantity},
            total_price = #{totalPrice},
            remark = #{remark},
            status = #{status}
        where order_id = #{orderId}
          and user_id = #{userId}
          and flower_id = #{flowerId}
    </update>



</mapper>