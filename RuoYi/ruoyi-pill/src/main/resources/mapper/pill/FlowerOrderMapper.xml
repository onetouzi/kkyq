<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.pill.mapper.FlowerOrderMapper">
    
    <resultMap type="FlowerOrder" id="FlowerOrderResult">
        <result property="orderId"    column="order_id"    />
        <result property="userId"    column="user_id"    />
        <result property="flowerId"    column="flower_id"    />
        <result property="flowerName"    column="flower_name"    />
        <result property="flowerCode"    column="flower_code"    />
        <result property="quantity"    column="quantity"    />
        <result property="unitPrice"    column="unit_price"    />
        <result property="totalPrice"    column="total_price"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectFlowerOrderVo">
        select o.order_id, o.user_id, o.flower_id, f.flower_name, f.flower_code, o.quantity, f.price as unit_price, o.total_price, o.status, o.create_time, o.update_time
        from flower_order o
        left join flower f on o.flower_id = f.flower_id
    </sql>

    <select id="selectFlowerOrderList" parameterType="FlowerOrder" resultMap="FlowerOrderResult">
        <include refid="selectFlowerOrderVo"/>
        <where>  
            <if test="userId != null"> and o.user_id = #{userId}</if>
            <if test="flowerId != null"> and o.flower_id = #{flowerId}</if>
            <if test="status != null  and status != ''"> and o.status = #{status}</if>
        </where>
        order by o.create_time desc
    </select>
    
    <select id="selectFlowerOrderByOrderId" parameterType="Long" resultMap="FlowerOrderResult">
        <include refid="selectFlowerOrderVo"/>
        where o.order_id = #{orderId}
    </select>

    <insert id="insertFlowerOrder" parameterType="FlowerOrder" useGeneratedKeys="true" keyProperty="orderId">
        insert into flower_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="flowerId != null">flower_id,</if>
            <if test="quantity != null">quantity,</if>
            <if test="totalPrice != null">total_price,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="flowerId != null">#{flowerId},</if>
            <if test="quantity != null">#{quantity},</if>
            <if test="totalPrice != null">#{totalPrice},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateFlowerOrder" parameterType="FlowerOrder">
        update flower_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="flowerId != null">flower_id = #{flowerId},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="totalPrice != null">total_price = #{totalPrice},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where order_id = #{orderId}
    </update>

    <delete id="deleteFlowerOrderByOrderId" parameterType="Long">
        delete from flower_order where order_id = #{orderId}
    </delete>

    <delete id="deleteFlowerOrderByOrderIds" parameterType="String">
        delete from flower_order where order_id in 
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>
</mapper>

